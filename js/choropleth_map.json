{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {"text": "Australia annual average Sunlight Hours", "fontSize": 20},
  "width": 900,
  "height": 520,
  "projection": {
    "type": "conicEqualArea",
    "parallels": [-35, -35],
    "rotate": [-135, 0, 0]
  },
  "data": {
    "url": "https://raw.githubusercontent.com/KokHeeTan/fit3179-testrepo/refs/heads/main/Week9_Homework/js/ne_50m.topojson",
    "format": {"type": "topojson", "feature": "ne_50m_admin_1_states_provinces"}
    },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "gainsboro",
        "stroke": "white"
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/KokHeeTan/fit3179-testrepo/refs/heads/main/Week9_Homework/data/sunshine_grouped_states.csv"
            },
            "key": "state",
            "fields": [
              "sunshine_hour"
            ]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke":"#ffffff",
        "strokeWidth": 1.5
      },
      "encoding": {
        "color": {
          "field": "sunshine_hour",
          "type": "quantitative",
          "title": [
            "Sunlight Hour (hrs/day)"
          ],
          "scale": {"scheme": "yelloworangered", "domain": [5, 8.5]},
          "legend": {
            "orient": "right",
            "offset": -40
          }
        },
        "tooltip": [
          { "field": "properties.name", "type": "nominal", "title": "State" },
          { "field": "sunshine_hour", "type": "quantitative", "title": "Sunlight Hour (hrs/day)", "format": ".2f" }
        ]
      }
    }
  ],
  "config": {
    "view": {
      "stroke": null
    }
  }
}