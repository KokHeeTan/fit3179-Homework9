{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Australia annual average sunshine hour",
  "width": 800,
  "height": 400,
  "projection": {"type": "equalEarth"},
  "data": {
    "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
    "format": {"type": "topojson", "feature": "states"}
  },
  "transform": [
    {
      "lookup": "properties.abbr",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/data/covid_10_10_2020.csv"
        },
        "key": "abbr",
        "fields": ["state","solar_per_1000","sunshine_hours"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "solar_per_capita",
      "title": "Systems per 1,000",
      "scale": {"scheme": "yellowgreenblue"}
    },
    "tooltip": [
      {"field": "state", "title": "State"},
      {"field": "solar_per_1000", "title": "Systems/1000", "format": ".1f"},
      {"field": "sunshine_hours", "title": "Sunshine hrs/yr", "format": ".0f"}
    ]
  }
}